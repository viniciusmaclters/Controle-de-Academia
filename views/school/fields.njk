 <div class="item">
            <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="Nome do Professor" value="{{teacher.avatar_url}}">
                
                </div>
        </div>
        
        
        <div class="item">
            <div>Professor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome completo" value="{{teacher.name}}">
                
                </div>
        </div>

        <div class="item">
            <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth" value="{{teacher.birth}}">
                </div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
                <div>
                    <select name="graduation" class="select" value="{{teacher.graduation}}">
                    
                        <option value="">Selecione</option>
                        <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                        
                    </select>
                </div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
                <div>
                    <span><input type="radio" name="type" value="P" {% if teacher.type == 'P'%} checked {% endif %}>Presencial</span>
                    <span><input type="radio" name="type" value="A" {% if teacher.type == 'A'%} checked {% endif %}>À distância</span>
                    

                </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe as matérias lecionadas por vírgula" value="{{teacher.services}}">
                </div>
        </div>

        <button type="submit">Salvar</button>